{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Path mappings for monorepo packages */
    "baseUrl": ".",
    "paths": {
      "@web-loom/design-core": [
        "../../packages/design-core/src"
      ],
      "@web-loom/design-core/*": [
        "../../packages/design-core/src/*"
      ],
      "@web-loom/store-core": [
        "../../packages/store-core/src"
      ],
      "@web-loom/store-core/*": [
        "../../packages/store-core/src/*"
      ],
      "@web-loom/mvvm-core": [
        "../../packages/mvvm-core/src"
      ],
      "@web-loom/mvvm-core/*": [
        "../../packages/mvvm-core/src/*"
      ],
      "@web-loom/query-core": [
        "../../packages/query-core/src"
      ],
      "@web-loom/query-core/*": [
        "../../packages/query-core/src/*"
      ],
      "@web-loom/event-bus-core": [
        "../../packages/event-bus-core/src"
      ],
      "@web-loom/event-bus-core/*": [
        "../../packages/event-bus-core/src/*"
      ],
      "@repo/shared": [
        "../../packages/shared/src"
      ],
      "@repo/shared/*": [
        "../../packages/shared/src/*"
      ],
      "@repo/view-models": [
        "../../packages/view-models/src"
      ],
      "@repo/view-models/*": [
        "../../packages/view-models/src/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "types": [
      "@vitest/browser/providers/playwright"
    ]
  },
  "include": [
    "src"
  ]
}