{
  "references": [
    {
      "path": "../../packages/models"
    },
    {
      "path": "../../packages/view-models"
    },
    {
      "path": "../../packages/shared"
    },
    {
      "path": "../../packages/mvvm-core"
    }
  ],
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["dom", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "@repo/models": ["../../packages/models/src"],
      "@repo/models/*": ["../../packages/models/src/*"],
      "@repo/view-models": ["../../packages/view-models/src"],
      "@repo/view-models/*": ["../../packages/view-models/src/*"],
      "@repo/shared": ["../../packages/shared/src"],
      "@repo/shared/*": ["../../packages/shared/src/*"],
      "@web-loom/mvvm-core": ["../../packages/mvvm-core/src"],
      "@web-loom/mvvm-core/*": ["../../packages/mvvm-core/src/*"],
      "@web-loom/ui-core": ["../../packages/ui-core/src"],
      "@web-loom/ui-core/*": ["../../packages/ui-core/src/*"],
      "@web-loom/ui-patterns": ["../../packages/ui-patterns/src"],
      "@web-loom/ui-patterns/*": ["../../packages/ui-patterns/src/*"],
      
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "verbatimModuleSyntax": true,
    "types": ["vite/client"]
  }
}
