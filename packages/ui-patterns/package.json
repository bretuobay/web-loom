{
  "name": "@web-loom/ui-patterns",
  "description": "Composed UI patterns built on Web Loom UI Core behaviors.",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": false,
  "version": "0.5.2",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "import": "./dist/patterns/index.js",
      "default": "./dist/patterns/index.js"
    },
    "./patterns/command-palette": {
      "types": "./dist/patterns/command-palette.d.ts",
      "import": "./dist/patterns/command-palette.js",
      "default": "./dist/patterns/command-palette.js"
    },
    "./patterns/master-detail": {
      "types": "./dist/patterns/master-detail.d.ts",
      "import": "./dist/patterns/master-detail.js",
      "default": "./dist/patterns/master-detail.js"
    },
    "./patterns/modal": {
      "types": "./dist/patterns/modal.d.ts",
      "import": "./dist/patterns/modal.js",
      "default": "./dist/patterns/modal.js"
    },
    "./patterns/sidebar-shell": {
      "types": "./dist/patterns/sidebar-shell.d.ts",
      "import": "./dist/patterns/sidebar-shell.js",
      "default": "./dist/patterns/sidebar-shell.js"
    },
    "./patterns/tabbed-interface": {
      "types": "./dist/patterns/tabbed-interface.d.ts",
      "import": "./dist/patterns/tabbed-interface.js",
      "default": "./dist/patterns/tabbed-interface.js"
    },
    "./patterns/toast-queue": {
      "types": "./dist/patterns/toast-queue.d.ts",
      "import": "./dist/patterns/toast-queue.js",
      "default": "./dist/patterns/toast-queue.js"
    },
    "./patterns/wizard": {
      "types": "./dist/patterns/wizard.d.ts",
      "import": "./dist/patterns/wizard.js",
      "default": "./dist/patterns/wizard.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "ui",
    "patterns",
    "headless",
    "master-detail",
    "wizard",
    "modal",
    "command-palette",
    "framework-agnostic",
    "typescript",
    "web-loom"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:tree-shaking": "node scripts/test-tree-shaking.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "size": "npm run build && npm run test:tree-shaking"
  },
  "dependencies": {
    "@web-loom/ui-core": "*",
    "@web-loom/store-core": "*",
    "@web-loom/event-bus-core": "*"
  },
  "peerDependencies": {
    "@web-loom/mvvm-core": ">=0.0.1",
    "@web-loom/query-core": ">=0.0.1"
  },
  "peerDependenciesMeta": {
    "@web-loom/mvvm-core": {
      "optional": true
    },
    "@web-loom/query-core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.x.x",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.7.3",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4"
  }
}
