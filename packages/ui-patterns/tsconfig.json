{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    /* Path mappings for monorepo packages */
    "paths": {
      "@web-loom/store-core": ["../store-core/src/index.ts"],
      "@web-loom/event-bus-core": ["../event-bus-core/src/index.ts"],
      "@web-loom/ui-core": ["../ui-core/src/index.ts"],
      "@web-loom/mvvm-core": ["../mvvm-core/src/index.ts"],
      "@web-loom/query-core": ["../query-core/src/index.ts"]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "tests",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests",
    "__tests__",
    "**/*.broken.ts",
    "src/mocks/**"
  ]
}
