{
  "name": "@web-loom/charts-core",
  "description": "A framework-agnostic, configuration-driven D3-based charting toolkit for modern apps.",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/charts-core.umd.js",
  "module": "./dist/charts-core.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/charts-core.es.js",
      "require": "./dist/charts-core.umd.js",
      "default": "./dist/charts-core.es.js"
    }
  },
  "keywords": [
    "charts",
    "d3",
    "visualization",
    "typescript",
    "reactive",
    "accessibility",
    "timeseries",
    "data-visualization",
    "framework-agnostic"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6222 --config-dir .storybook",
    "storybook:build": "storybook build --config-dir .storybook",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "d3-array": "^3.2.4",
    "d3-axis": "^3.0.0",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.2.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@types/d3-axis": "^3.0.6",
    "@types/d3-selection": "^3.0.11",
    "@types/node": "^20.x.x",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "d3-array": "^3.2.4",
    "d3-axis": "^3.0.0",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.2.0",
    "date-fns": "^4.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^26.1.0",
    "@storybook/addon-essentials": "^8.6.15",
    "@storybook/html-vite": "^8.6.15",
    "prettier": "^3.7.3",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4"
  }
}
