{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "ESNext", // or "ES2022"
    "target": "ES2022",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@web-loom/mvvm-core": [
        "../../node_modules/@web-loom/mvvm-core"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}