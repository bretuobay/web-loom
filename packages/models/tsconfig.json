{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "rootDir": "src",
    "composite": true,
    "incremental": true,
    "paths": {
      "@web-loom/mvvm-core": [
        "../mvvm-core/dist"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/examples/**/*.ts",
    "**/examples/**/*.tsx"
  ],
  "references": [
    {
      "path": "../mvvm-core"
    }
  ]
}
