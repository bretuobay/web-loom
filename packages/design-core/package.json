{
  "name": "@web-loom/design-core",
  "description": "A minimal design system library for building reactive web applications.",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": false,
  "version": "0.5.6",
  "type": "module",
  "files": [
    "dist",
    "src/css",
    "src/design-system",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.js",
  "module": "./dist/design-core.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js",
      "default": "./dist/utils/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./css/borders.css": "./src/css/borders.css",
    "./css/breakpoints.css": "./src/css/breakpoints.css",
    "./css/colors.css": "./src/css/colors.css",
    "./css/cursor-styles.css": "./src/css/cursor-styles.css",
    "./css/focus-rings.css": "./src/css/focus-rings.css",
    "./css/gradients.css": "./src/css/gradients.css",
    "./css/opacity.css": "./src/css/opacity.css",
    "./css/radii.css": "./src/css/radii.css",
    "./css/shadows.css": "./src/css/shadows.css",
    "./css/sizing.css": "./src/css/sizing.css",
    "./css/spacing.css": "./src/css/spacing.css",
    "./css/timing.css": "./src/css/timing.css",
    "./css/transitions.css": "./src/css/transitions.css",
    "./css/typography.css": "./src/css/typography.css",
    "./css/z-index.css": "./src/css/z-index.css",
    "./design-system": {
      "import": "./src/design-system/index.css",
      "style": "./src/design-system/index.css",
      "default": "./src/design-system/index.css"
    },
    "./design-system/*": {
      "import": "./src/design-system/*.css",
      "style": "./src/design-system/*.css",
      "default": "./src/design-system/*.css"
    }
  },
  "keywords": [
    "design-system",
    "ux",
    "ui",
    "web-framework",
    "frontend",
    "react",
    "angular",
    "vue",
    "typescript",
    "dashboard"
  ],
  "scripts": {
    "generate:css": "node scripts/generate-css.cjs",
    "dev": "npm run generate:css && npx vite build --watch",
    "build": "npm run generate:css && npx vite build",
    "verify:exports": "node scripts/verify-exports.mjs",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^20.x.x",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.7.3",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4"
  }
}
