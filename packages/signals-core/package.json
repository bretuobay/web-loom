{
  "name": "@web-loom/signals-core",
  "description": "Framework-agnostic reactive signals with computed values and effects.",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": false,
  "version": "0.5.4",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/signals-core.umd.js",
  "module": "./dist/signals-core.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/signals-core.es.js",
      "require": "./dist/signals-core.umd.js",
      "default": "./dist/signals-core.es.js"
    }
  },
  "keywords": [
    "signals",
    "reactive",
    "state",
    "computed",
    "effects",
    "typescript",
    "web-loom"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "typescript": "5.8.2",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4"
  }
}
