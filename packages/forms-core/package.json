{
  "name": "@web-loom/forms-core",
  "description": "Framework-agnostic form management library with Zod integration",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/forms-core.umd.js",
  "module": "./dist/forms-core.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/forms-core.es.js",
      "require": "./dist/forms-core.umd.js",
      "default": "./dist/forms-core.es.js"
    }
  },
  "keywords": [
    "forms",
    "validation",
    "zod",
    "typescript",
    "framework-agnostic"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "clean": "rm -rf dist",
    "benchmark": "vitest bench"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "optionalDependencies": {
    "@web-loom/storage-core": "*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "zod": "^3.22.0"
  }
}
