{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "../forms-core/src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests"
    ]
}