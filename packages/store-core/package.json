{
  "name": "@web-loom/store-core",
  "description": "A minimal client state management library for building reactive web applications.",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": false,
  "version": "0.0.3",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/store-core.umd.js",
  "module": "./dist/store-core.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/store-core.es.js",
      "require": "./dist/store-core.umd.js"
    }
  },
  "keywords": [
    "mvvm",
    "rxjs",
    "zod",
    "web-framework",
    "frontend",
    "react",
    "angular",
    "vue",
    "typescript",
    "dashboard"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^20.x.x",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.2",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4"
  }
}
