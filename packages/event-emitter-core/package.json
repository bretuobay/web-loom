{
  "name": "@web-loom/event-emitter-core",
  "version": "0.1.0",
  "description": "Tiny, type-safe event emitter shared across Web Loom packages.",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/event-emitter-core.umd.js",
  "module": "./dist/event-emitter-core.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/event-emitter-core.es.js",
      "require": "./dist/event-emitter-core.umd.js",
      "default": "./dist/event-emitter-core.es.js"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.1",
    "typescript": "5.8.2",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4"
  }
}
