{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@repo/models/*": [
        "../models/dist/*"
      ],
      "@web-loom/mvvm-core/*": [
        "../mvvm-core/dist/*"
      ]
    },
    "composite": true,
    "incremental": true,
    "rootDir": "src",
    "rootDirs": [
      "src",
      "../models/dist",
      "../mvvm-core/dist"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/examples/**/*.ts",
    "**/examples/**/*.tsx"
  ],
  "references": [
    {
      "path": "../models"
    },
    {
      "path": "../mvvm-core"
    }
  ]
}
