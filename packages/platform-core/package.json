{
  "name": "@web-loom/platform-core",
  "description": "Device & platform detection library with reactive observables for modern web applications.",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": false,
  "version": "0.5.2",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/platform-core.umd.js",
  "module": "./dist/platform-core.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/platform-core.es.js",
      "require": "./dist/platform-core.umd.js",
      "default": "./dist/platform-core.es.js"
    }
  },
  "keywords": [
    "platform-detection",
    "device-detection",
    "browser-detection",
    "rxjs",
    "observables",
    "responsive",
    "viewport",
    "network-status",
    "battery-status",
    "typescript"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest --watch=false",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^20.x.x",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.7.3",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "rxjs": "^7.8.2"
  }
}
