{
  "name": "@web-loom/ui-core",
  "description": "Framework-agnostic headless UI behaviors for modern web applications.",
  "author": "Festus Yeboah<festus.yeboah@hotmail.com>",
  "license": "MIT",
  "private": false,
  "version": "0.5.2",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./behaviors": {
      "types": "./dist/behaviors/index.d.ts",
      "import": "./dist/behaviors/index.js",
      "default": "./dist/behaviors/index.js"
    },
    "./behaviors/dialog": {
      "types": "./dist/behaviors/dialog.d.ts",
      "import": "./dist/behaviors/dialog.js",
      "default": "./dist/behaviors/dialog.js"
    },
    "./behaviors/disclosure": {
      "types": "./dist/behaviors/disclosure.d.ts",
      "import": "./dist/behaviors/disclosure.js",
      "default": "./dist/behaviors/disclosure.js"
    },
    "./behaviors/form": {
      "types": "./dist/behaviors/form.d.ts",
      "import": "./dist/behaviors/form.js",
      "default": "./dist/behaviors/form.js"
    },
    "./behaviors/list-selection": {
      "types": "./dist/behaviors/list-selection.d.ts",
      "import": "./dist/behaviors/list-selection.js",
      "default": "./dist/behaviors/list-selection.js"
    },
    "./behaviors/roving-focus": {
      "types": "./dist/behaviors/roving-focus.d.ts",
      "import": "./dist/behaviors/roving-focus.js",
      "default": "./dist/behaviors/roving-focus.js"
    },
    "./behaviors/keyboard-shortcuts": {
      "types": "./dist/behaviors/keyboard-shortcuts.d.ts",
      "import": "./dist/behaviors/keyboard-shortcuts.js",
      "default": "./dist/behaviors/keyboard-shortcuts.js"
    },
    "./behaviors/undo-redo-stack": {
      "types": "./dist/behaviors/undo-redo-stack.d.ts",
      "import": "./dist/behaviors/undo-redo-stack.js",
      "default": "./dist/behaviors/undo-redo-stack.js"
    },
    "./react": {
      "types": "./dist/adapters/react/index.d.ts",
      "import": "./dist/adapters/react.js",
      "default": "./dist/adapters/react.js"
    },
    "./vue": {
      "types": "./dist/adapters/vue/index.d.ts",
      "import": "./dist/adapters/vue.js",
      "default": "./dist/adapters/vue.js"
    },
    "./angular": {
      "types": "./dist/adapters/angular/index.d.ts",
      "import": "./dist/adapters/angular.js",
      "default": "./dist/adapters/angular.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "default": "./dist/types/index.js"
    },
    "./package.json": "./package.json"
  },
  "keywords": [
    "ui",
    "headless",
    "behaviors",
    "framework-agnostic",
    "react",
    "vue",
    "angular",
    "typescript",
    "web-loom"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:tree-shaking": "node scripts/test-tree-shaking.js",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "size": "npm run build && npm run test:tree-shaking"
  },
  "dependencies": {
    "@web-loom/event-bus-core": "*",
    "@web-loom/store-core": "*"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^20.x.x",
    "@types/react": "^18.3.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fast-check": "^4.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "~5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.13"
  }
}
